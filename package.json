{
  "name": "prettier-plugin-detect-throw",
  "version": "1.0.0",
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "description": "A Prettier plugin to detect and enforce rules for throw statements",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JQuezada0/prettier-plugin-detect-throw.git"
  },
  "keywords": [
    "prettier",
    "prettier-plugin",
    "error",
    "throw",
    "exception"
  ],
  "exports": {
    ".": {
      "types": "./index.ts",
      "default": "./dist/index.js"
    },
    "./plugin": {
      "types": "./index.ts",
      "default": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/micromatch": "4.0.9",
    "@typescript-eslint/typescript-estree": "8.32.0",
    "prettier-plugin-organize-imports": "4.1.0",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "prettier": "^3.5.3"
  },
  "dependencies": {
    "estree-util-attach-comments": "3.0.0",
    "micromatch": "4.0.8"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "bun build index.ts --outdir ./dist --external prettier --minify",
    "watch": "bun build index.ts --outdir ./dist --external prettier --watch"
  }
}